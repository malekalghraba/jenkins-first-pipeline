pipeline {
    agent any
    stages {
        stage("Clean Up") {
            steps {
                deleteDir()
            }
        }
        stage("Clone Repo") {
            steps {
                 dir("simple-maven-project")
                {
               
                git url: 'https://github.com/malekalghraba/jenkins-first-pipeline', branch: 'master'
                }
            }
        }
        stage("Build") {
            steps {
                dir("simple-maven-project")
                {
                     sh "mvn clean install "
                }
               
                
                
            }
        }
        stage('Test') {
            steps {
                dir("simple-maven-project")
                {
                sh "mvn test"
                }
            }
        }
    }
}
